<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <Button
      android:id="@+id/camera_btn_start_activity_return_image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="@dimen/textViewPadding"
      android:text="@string/camera_btn_text_return_image"
      android:textSize="@dimen/textSize"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.8" />

  <Button
      android:id="@+id/camera_btn_start_activity_save_to_file"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="@dimen/textViewPadding"
      android:text="@string/camera_btn_text_save_to_file"
      android:textSize="@dimen/textSize"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.9" />

  <ImageView
      android:id="@+id/camera_iv_show_image"
      android:layout_width="300dp"
      android:layout_height="300dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>